<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${project.version}</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/classes/execute</directory>
            <outputDirectory>execute</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/groovy</directory>
            <outputDirectory>groovy</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/report</directory>
            <outputDirectory>report</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/resources</directory>
            <outputDirectory>resources</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/classes/setup</directory>
            <outputDirectory>setup</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.build.directory}/classes/flow-definition.json
            </source>
            <outputDirectory/>
        </file>
    </files>
</assembly>